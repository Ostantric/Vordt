<?xml version="1.0" ?>
<robot name="vordt" xmlns:xacro="http://ros.org/wiki/xacro">
  <pose xyz="0 0 0" rpy=" 0 0 0"/>
   <link name='chassis'>
    <inertial>
      <mass value="1000.0"/>
      <origin xyz="0 0 1" rpy=" 0 0 0"/>
      <inertia
          ixx="1.0" ixy="0.0" ixz="0.0"
          iyy="1.0" iyz="0.0"
          izz="1.0"
      />
    </inertial>
    <collision name='collision'>
      <origin xyz="0 0 1" rpy=" 1.5707 0 0"/>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Chasis_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name='chassis_visual'>
      <origin xyz="0 0 1" rpy=" 1.5707 0 0"/>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Chasis_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

<link name="right_front_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name="right_front_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
	  <maxVel>0.0</maxVel>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <cylinder_inertia m="10" r="0.5" h="1.0"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>
  <link name="right_back_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name="right_back_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
	  <maxVel>0.0</maxVel>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <cylinder_inertia m="10" r="0.5" h="1.0"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>
  <link name="left_front_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name="left_front_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
	  <maxVel>0.0</maxVel>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <cylinder_inertia m="10" r="0.5" h="1.0"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>
  <link name="left_back_wheel">
    <collision name="collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </collision>
    <visual name="left_back_wheel_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
	  <maxVel>0.0</maxVel>
      <geometry>
        <mesh filename="package://vordt_description/meshes/Vordt-Wheel_LOW_RES.stl" scale="0.05 0.05 0.05"/>
      </geometry>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5"/>
      <cylinder_inertia m="10" r="0.5" h="1.0"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
    </inertial>
  </link>

  <joint type="continuous" name="right_front_wheel_hinge">
    <origin xyz="0.47 -1.0 0.925" rpy="0 0 1.57"/> <!-- location based on chasis's center point-->
    <child link="right_front_wheel"/>
    <parent link="chassis"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
  <joint type="continuous" name="right_back_wheel_hinge">
    <origin xyz="-0.47 -1.0 0.925" rpy="0 0 1.57"/> <!-- location based on chasis's center point-->
    <child link="right_back_wheel"/>
    <parent link="chassis"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
  <joint type="continuous" name="left_front_wheel_hinge">
    <origin xyz="0.47 1.0 0.925" rpy="0 0 -1.57"/> <!-- location based on chasis's center point-->
    <child link="left_front_wheel"/>
    <parent link="chassis"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
  <joint type="continuous" name="left_back_wheel_hinge">
    <origin xyz="-0.47 1.0 0.925" rpy="0 0 -1.57"/> <!-- location based on chasis's center point-->
    <child link="left_back_wheel"/>
    <parent link="chassis"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>
  
<gazebo>
    <plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
      <legacyMode>false</legacyMode>
      <alwaysOn>true</alwaysOn>
      <updateRate>20</updateRate>
      <leftJoint>left_back_wheel_hinge</leftJoint>
      <rightJoint>right_back_wheel_hinge</rightJoint>
      <wheelSeparation>0.4</wheelSeparation>
      <wheelDiameter>0.5</wheelDiameter>
      <torque>100</torque>
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <robotBaseFrame>chassis</robotBaseFrame>
    </plugin>
  </gazebo>

</robot>
